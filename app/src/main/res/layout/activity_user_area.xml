<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.svcet.krytonites.UserAreaActivity">



    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:background="@android:color/white"
        android:padding="30dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">




        <TextView
            android:id="@+id/tvUserArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="15dp"
            android:text="User Area"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="30sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/tvWelcomeMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome Message!!"
            android:layout_below="@+id/tvUserArea"/>

        <TextView
            android:id="@+id/tvFullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name:"
            android:layout_below="@+id/tvWelcomeMsg"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvFullname"
            android:inputType="textPersonName"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age:"
            android:layout_below="@+id/etName"/>

        <EditText
            android:id="@+id/etAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvAge"
            android:inputType="number"
            android:textColor="@color/colorAccent" />



    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
